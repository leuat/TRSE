@donotremove nmi
interrupt nmi();
begin
	asm("
	   rep #$10        ; X/Y 16-bit
	   sep #$20        ; A 8-bit
	   phd
	   pha
	   phx
	   phy
	   ; Do stuff that needs to be done during V-Blank
	   
	   lda RDNMI ; reset NMI flag
	   ply
	   plx
	   pla
	   pld
	   
	   plb
	return_int:
	");
end;	


procedure MoveToXY(x,y,i1:global integer);
begin
	i:=0;
	if (x>31) then 
	begin 
		x:=x&31;
		i+=1;
	end;
	if (y>31) then 
	begin 
		y:=y&31;
		i+=2;
	end;
	i1+=quadrant[i] + tab32[y]+x;
	asm("
	ldx Screen_i1
    stx VMADDL
	");
end;


