	/**
	Copies [param 3] bytes from [param 1] to the palette register starting with color [param 2]
	
	**/
	
procedure SetPalette(zp:global lpointer;x:global byte;i1:global integer);
begin
	asm("
   lda #$20
   sta VMAIN   ; VRAM stride of 1 word

   lda Screen_x   
   sta CGADD ; start with color 0 (background)
   ldy #0
@loop:
   lda [Screen_zp],y
   sta CGDATA
   iny
   lda [Screen_zp],y
   sta CGDATA

   iny

   cpy Screen_i1
   bne @loop

	");
end;

