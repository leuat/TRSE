program key_press;
@projectsettings "system" SPECTRUM
@use "text/txt"

var
	press_str: string = ("PRESS A KEY",0);

begin

	// Clear screen,
	// Set cursor to 0,0
	txt::cls();
	txt::cursor_off();
	
	// Welcome message 
	txt::move_to(10,10);
	txt::print_string(#press_str, True);

	// Wait for keypress
	txt::wait_key();
	txt::print_string("DONE", False);	
	txt::beep();
	loop();
end.

