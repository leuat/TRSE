procedure SetupFontTab();
begin
	p1:=@FontTabPos;
	for i:=0 to 128 do begin	
		k:=i;
		if (k>=64) then
			k:=k-64;

		zp:=$2000;

		if k>=31 then begin
			k:=k-31;
			inczp(zp, 31*8);
		end;
		if (k<>0) then 
			inczp(zp, k*8);

		k:=i*2;
		asm("
			ldy k
	
			lda zp
			sta (p1),y
			lda zp+1
			iny
			sta (p1),y

	

		");
//		inczp(p1,2);

	end;

end;




