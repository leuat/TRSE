procedure SetupScroll();
begin
	k2:=-time;
	for k:=0 to 4 do begin
		ms_shift:=sine[time+k2];// -sine[time*2+k2*2+3]/4;
		if (dscroll<>0) then begin
			shifts[k]:=(7-ms_shift)&7;
		end;
		ms_shift:=ms_shift/8;
		shifts2[k]:=ms_shift;	
//		if (dscroll<>0) then
		if (k=1) then shifts[k]:=7-dscroll;
		k2:=k2+44;
	end;
end;


