-- Init is called on start  
 

frame = 0
--noFrames = 24
noFrames = 256
curSave = 1

hasSaved = 0



function Init()


	UpdateScene()

end

function PostProcess();
	t = frame/noFrames
	if (t>0.5) then 
		t = 1-t;
	end
	c = t * 255 *2
	w = 0.2
	rnd = math.random()*w+(1-w)
	c = c*rnd
	
	
	
	for i= 0,output.resolution.height do	 
		DrawLine(0,i,8,i, c,c,c);
	end
	

end


function UpdateScene()
end


function Update()
	

	if (frame>=1) then
		Add8PixelToData(0,4,1,1)
--		Add4PixelToData(0,1,1,1)
	
	end

	if (frame==noFrames) then 
		SaveRawData("data/smooth_data.bin");
		Message("saved. please close!")
	end	
		UpdateScene()


	frame=frame+1
	


end
